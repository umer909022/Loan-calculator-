<!DOCTYPE html>
<html>
<head>
  <title>Loan Calculator</title>
  <style>
    body { font-family: Arial; padding: 20px; max-width: 600px; margin: auto; }
    label, input { display: block; margin-bottom: 10px; }
    input[type="number"] { width: 100%; padding: 8px; }
    button { padding: 10px 20px; }
    #result { margin-top: 20px; font-weight: bold; }
  </style>
</head>
<body>
  <h1>Loan Calculator</h1>
  <label>Loan Amount:</label>
  <input type="number" id="amount" placeholder="e.g. 10000">

  <label>Interest Rate (Annual %):</label>
  <input type="number" id="rate" placeholder="e.g. 5">

  <label>Term (Years):</label>
  <input type="number" id="years" placeholder="e.g. 3">

  <button onclick="calculate()">Calculate Monthly Payment</button>

  <div id="result"></div>

  <script>
    function calculate() {
      const amount = parseFloat(document.getElementById('amount').value);
      const rate = parseFloat(document.getElementById('rate').value) / 100 / 12;
      const years = parseFloat(document.getElementById('years').value);
      const payments = years * 12;

      const x = Math.pow(1 + rate, payments);
      const monthly = (amount * x * rate) / (x - 1);

      document.getElementById('result').innerText =
        "Monthly Payment: $" + monthly.toFixed(2);
    }
  </script>
</body>
</html>
